<% layout('/layouts/boilerplate') -%>

<h3>All Listings</h3>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListings) { %>
        <div class="card index-card listing-card">
            <a href="/listings/<%= listing._id %>">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height : 20rem;">
            </a>
            <div class="card-body">
                <b>
                    <p class="card-text">
                        <%= listing.title %>
                    </p>
                </b>
                <p>&#8377; <%= (typeof listing.price === "number") ? listing.price.toLocaleString("en-US") : "Price not available" %> %></p>
                <a href="/listings/<%= listing._id %>"></a>
            </div>
        </div>
        <% } %>
</div>